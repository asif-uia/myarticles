upstream puma_<%=fetch(:stage)%> {
  server <%= fetch(:puma_bind) %> fail_timeout=15s;
}

server {
  server_name 192.168.1.30;
  listen 80;

  root <%= fetch(:deploy_to) %>/current/public;

  location / {
    try_files $uri @puma_<%=fetch(:stage)%>;
  }

  location @puma_<%=fetch(:stage) %> {
    proxy_pass http://puma_<%= fetch(:stage) %>;
    proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 5M;
  keepalive_timeout 10;

  access_log <%=fetch(:nginx_access_log) %>;
  error_log <%= fetch(:nginx_error_log) %> info;
}